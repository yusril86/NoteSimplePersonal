<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        >

        <EditText
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edt_titleEdit"
            android:hint="Masukkan Judul"
            android:textSize="25sp"
            android:inputType="textCapSentences"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edt_noteEdit"
            android:hint="Masukkan Catatan"
            android:inputType="textMultiLine"
            android:minLines="6"
            app:layout_constraintTop_toBottomOf="@id/edt_titleEdit"
            android:layout_marginTop="20dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edt_tanggalEdit"
            android:hint="Masukkan Catatan"
            android:inputType="textMultiLine"
            app:layout_constraintTop_toBottomOf="@id/edt_noteEdit"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            />
        <com.thebluealliance.spectrum.SpectrumPalette
            android:id="@+id/editPalette"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="20dp"
            app:spectrum_colors="@array/demo_colors"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@id/edt_noteEdit"
            />
        <ImageButton
            android:visibility="gone"
            android:layout_width="100dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/editPalette"
            app:layout_constraintLeft_toRightOf="@id/btn_change"
            app:layout_constraintEnd_toEndOf="parent"
            android:backgroundTint="@color/blue"
            android:src="@drawable/ic_save"
            android:layout_marginTop="32dp"
            android:id="@+id/btn_edit"
            android:layout_marginEnd="32dp"
            />
        <ImageButton
            android:visibility="gone"
            android:layout_width="100dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/editPalette"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintRight_toLeftOf="@id/btn_change"
            android:backgroundTint="@color/red"
            android:layout_marginTop="32dp"
            android:id="@+id/btn_delete"
            android:src="@drawable/ic_delete"
            android:layout_marginStart="32dp"
            />
        <ImageButton
            android:backgroundTint="#DC8875"
            android:id="@+id/btn_change"
            android:layout_width="100dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/editPalette"
            app:layout_constraintStart_toEndOf="@id/btn_edit"
            app:layout_constraintEnd_toStartOf="@id/btn_delete"
            android:layout_marginTop="32dp"
            android:src="@drawable/ic_edit"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>